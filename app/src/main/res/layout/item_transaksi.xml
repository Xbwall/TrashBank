<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeWidth="1dp"
            app:strokeColor="@color/cardview"
            app:cardElevation="0dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shape"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/shape_cardview" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/contentTR"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/btn_deleteTR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView
                                android:id="@+id/itm_namaTR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="nama"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="23sp" />

                            <TextView
                                android:id="@+id/itm_nominal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Nominal"
                                android:textAlignment="textStart"
                                android:textColor="@color/blue"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/itm_tgl_pengambilan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Tanggal Pengambilan"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/itm_tanggaltransaksi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="Tanggal_transaksi"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btn_deleteTR"
                            android:layout_width="60dp"
                            android:layout_height="100dp"
                            android:layout_gravity="right"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_delete_24"
                            app:tint="@color/blue" />
                    </RelativeLayout>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

</LinearLayout>